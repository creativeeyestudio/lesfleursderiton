<!DOCTYPE html>
<html lang='fr' dir="ltr">
    <head>
        <meta charset="UTF-8">
        <title>{{ site_name }} - {% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app-admin') }}
        {% endblock %}
    </head>
    <body>
        <div id="app">
            <!-- Contenu -->
            <main>
                {% block body %}{% endblock %}
            </main>
        </div>
        
        {% block javascripts %}
            {{ encore_entry_script_tags('app-admin') }}
        {% endblock %}
    </body>
</html>
